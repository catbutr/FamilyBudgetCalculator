@model IEnumerable<FamilyBudgetCalculator.Models.Category>

<h2>Список пользователей</h2>
<p><a asp-action="CreateCategoryPage">Добавить пользователя</a></p>
<table class="table">
    <tr><th>Имя</th><th>Возраст</th><th></th><th></th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryName</td>
            <td>
                <form asp-action="DeleteCategory" asp-controller="Home" method="post" asp-route-id="@item.CategoryID">
                    <input type="submit" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>
